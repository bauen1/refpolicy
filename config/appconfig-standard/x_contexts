#
# Config file for XSELinux extension
#


#
##
### Rules for X Clients
##
#

#
# The default client rule defines a context to be used for all clients
# connecting to the server from a remote host.
#
client	*				system_u:system_r:remote_t


#
##
### Rules for X Properties
##
#

#
# Property rules map a property name to a context.  A default property
# rule indicated by an asterisk should follow all other property rules.
#
# Properties that normal clients may only read
property _SELINUX_*			system_u:system_r:seclabel_xproperty_t

# Clipboard and selection properties
property CUT_BUFFER?			system_u:system_r:clipboard_xproperty_t

# Default fallback type
property *	   			system_u:system_r:xproperty_t


#
##
### Rules for X Extensions
##
#

#
# Extension rules map an extension name to a context.  A default extension
# rule indicated by an asterisk should follow all other extension rules.
#
# Restricted extensions
extension SELinux			system_u:system_r:security_xextension_t

# Standard extensions
extension *	   			system_u:system_r:xextension_t


#
##
### Rules for X Selections
##
#

# Selection rules map a selection name to a context.  A default selection
# rule indicated by an asterisk should follow all other selection rules.
#
# Standard selections
selection PRIMARY			system_u:system_r:clipboard_xselection_t
selection CLIPBOARD			system_u:system_r:clipboard_xselection_t

# Default fallback type
selection *				system_u:system_r:xselection_t


#
##
### Rules for X Events
##
#

#
# Event rules map an event protocol name to a context.  A default event
# rule indicated by an asterisk should follow all other event rules.
#
# Input events
event X11:KeyPress			system_u:system_r:input_xevent_t
event X11:KeyRelease			system_u:system_r:input_xevent_t
event X11:ButtonPress			system_u:system_r:input_xevent_t
event X11:ButtonRelease			system_u:system_r:input_xevent_t
event X11:MotionNotify			system_u:system_r:input_xevent_t
event XInputExtension:DeviceKeyPress	system_u:system_r:input_xevent_t
event XInputExtension:DeviceKeyRelease	system_u:system_r:input_xevent_t
event XInputExtension:DeviceButtonPress	system_u:system_r:input_xevent_t
event XInputExtension:DeviceButtonRelease	system_u:system_r:input_xevent_t
event XInputExtension:DeviceMotionNotify	system_u:system_r:input_xevent_t
event XInputExtension:DeviceValuator	system_u:system_r:input_xevent_t
event XInputExtension:ProximityIn	system_u:system_r:input_xevent_t
event XInputExtension:ProximityOut	system_u:system_r:input_xevent_t

# Client message events
event X11:ClientMessage			system_u:system_r:client_xevent_t
event X11:SelectionNotify		system_u:system_r:client_xevent_t
event X11:UnmapNotify			system_u:system_r:client_xevent_t
event X11:ConfigureNotify		system_u:system_r:client_xevent_t

# Default fallback type
event *					system_u:system_r:xevent_t
